{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "src/**/*", "package.json"],
  "exclude": ["node_modules"],
}